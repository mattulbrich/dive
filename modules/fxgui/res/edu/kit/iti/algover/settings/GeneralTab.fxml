<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>


<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Region?>
<AnchorPane minHeight="400.0" minWidth="600.0" xmlns="http://javafx.com/javafx/8.0.131" xmlns:fx="http://javafx.com/fxml/1" stylesheets="@../style.css">
    <children>
        <VBox fx:id="container" AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0" AnchorPane.topAnchor="5.0" >
            <padding><Insets top="25" right="25" bottom="25" left="25"/></padding>
            <children>
                <Label text="Editors" styleClass="settings-h1"></Label>
                <HBox fx:id="fontSizeEditors" alignment="CENTER_LEFT" spacing="30">
                    <Label text="Font size" alignment="CENTER_LEFT"></Label>

                    <TextField fx:id="currentFontSizeEditor" editable="true"></TextField>
                </HBox>
                <Region prefHeight="40" VBox.vgrow="ALWAYS"></Region>
                <Separator></Separator>
                <Label text="SequentView" styleClass="settings-h1"></Label>
                <HBox fx:id="fontSizeSeqView" alignment="CENTER_LEFT" spacing="30">
                    <Label text="Font size" alignment="CENTER_LEFT" ></Label>

                    <TextField fx:id="currentFontSizeSeqView" editable="true"></TextField>
                </HBox>

                <Region prefHeight="40" VBox.vgrow="ALWAYS"></Region>
                <Separator></Separator>
                <Label text="ScriptEditor" styleClass="settings-h1"></Label>
                <HBox fx:id="fontSizeScriptEditor" alignment="CENTER_LEFT" spacing="30">
                    <Label text="Font size" alignment="CENTER_LEFT" ></Label>
                    <TextField fx:id="currentFontSizeScriptEditor" editable="true"></TextField>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>